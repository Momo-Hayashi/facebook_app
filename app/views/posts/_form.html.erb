<%= form_with(model: @post, local:true, url: choose_new_or_edit) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="posting">
    <%= form.label :content %>
    <%= form.text_field :content %><br>
    <%= image_tag(@post.image.url) if @post.image && @post.image.url %><br>
    <%= form.label :image %>
    <%= form.file_field :image %><br>
    <%= form.hidden_field :image_cache %>
  </div><br>
  <%= form.submit class: "btn btn-warning"%>
  <%= link_to "Back to Home", posts_path, class: "btn btn-info" %>
<% end %>
